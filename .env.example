
# ===========================================
# CORE DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database (Backend storage)
DATABASE_URL="postgresql://postgres:password@localhost:5432/deqode_finance_chatbot"

# Redis Database (Short-term memory, caching, streaming state)
REDIS_URL="redis://localhost:6379"
REDIS_DB=0
REDIS_PASSWORD=""

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-deqode2024"
JWT_EXPIRES_IN="7d"
JWT_ALGORITHM="HS256"

# ===========================================
# AI & LLM PROVIDERS (ENHANCED SETUP)
# ===========================================
# OpenAI Configuration (Primary LLM for enhanced agents)
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_TEMPERATURE=0.1



# ===========================================
# MEMORY SYSTEM CONFIGURATION (NEW)
# ===========================================
# Vector Database Backend Selection
VECTOR_BACKEND="memory"  # Options: "memory", "pinecone"

# Pinecone Configuration (Long-term memory storage)
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-east-1-aws" 
PINECONE_INDEX="deqode-finance-memory"
PINECONE_CLOUD="aws"
PINECONE_REGION="us-east-1"

# Embedding Configuration
USE_OPENAI_EMBEDDINGS=false
EMBEDDING_MODEL="sentence-transformers/all-MiniLM-L6-v2"



# ===========================================
# WEB SEARCH PROVIDERS (ENHANCED)
# ===========================================
# DuckDuckGo Search (Primary - Free)
ENABLE_WEB_SEARCH=true
DUCKDUCKGO_ENABLED=true

# Tavily Search (Premium - Recommended for production)
TAVILY_API_KEY="tvly-your-tavily-api-key"



# ===========================================
# LANGGRAPH & MULTI-AGENT CONFIGURATION (NEW)
# ===========================================
# Enhanced Research Workflow
ENABLE_LANGGRAPH=true
ENABLE_MEMORY=true
MAX_SOURCES=15
MIN_RELEVANCE_SCORE=0.7

# LangSmith Integration (Optional monitoring)
LANGSMITH_API_KEY="your-langsmith-api-key"
LANGSMITH_PROJECT="deqode-finance-research"

# ===========================================
# FINANCIAL DATA SOURCES
# ===========================================
# Yahoo Finance (Primary - Free)
YAHOO_FINANCE_ENABLED=true

# Premium Financial Data APIs (Optional)
ALPHA_VANTAGE_API_KEY="your-alpha-vantage-key"
QUANDL_API_KEY="your-quandl-key"
POLYGON_API_KEY="your-polygon-key"
FINNHUB_API_KEY="your-finnhub-key"

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Server Ports
FRONTEND_PORT=3000
BACKEND_PORT=8000
AGENTS_PORT=9000

# Environment Setup
NODE_ENV="development"
PYTHON_ENV="development"

# CORS Configuration
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"
ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
ALLOWED_HEADERS="*"

# ===========================================
# ENHANCED FEATURES CONFIGURATION
# ===========================================
# Core Features
ENABLE_WEB_RESEARCH=true
ENABLE_STREAMING=true
ENABLE_CITATIONS=true
ENABLE_VECTOR_SEARCH=true
ENABLE_MEMORY_PERSISTENCE=true
ENABLE_REAL_TIME_DATA=true

# Advanced Features (NEW)
ENABLE_PORTFOLIO_TRACKING=true
ENABLE_EXPORT_FEATURES=true
ENABLE_REPORT_GENERATION=true
ENABLE_PEER_COMPARISON=true
ENABLE_QUARTERLY_ANALYSIS=true

# Multi-Agent Features
ENABLE_MULTI_STEP_RESEARCH=true
ENABLE_SOURCE_DEDUPLICATION=true
ENABLE_CONFIDENCE_SCORING=true

# Experimental Features
ENABLE_VOICE_INTERFACE=false
ENABLE_SOCIAL_FEATURES=false
ENABLE_AUTOMATED_TRADING=false

# ===========================================
# PERFORMANCE & CACHING
# ===========================================
# Rate Limiting
MAX_REQUESTS_PER_HOUR=100
MAX_RESEARCH_QUERIES_PER_DAY=50
RATE_LIMIT_WINDOW=3600

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000
MAX_CACHE_SIZE=1000

# Memory Management
REDIS_MAX_MEMORY="512mb"
VECTOR_CACHE_SIZE=10000

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Logging Configuration
LOG_LEVEL="INFO"
LOG_FORMAT="json"
ENABLE_QUERY_LOGGING=true
ENABLE_PERFORMANCE_METRICS=true

# Health Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# ===========================================
# DEVELOPMENT & TESTING
# ===========================================
# Development Mode
DEBUG_MODE=true
ENABLE_HOT_RELOAD=true
ENABLE_DEBUG_TOOLBAR=true
SHOW_REASONING=true

# Testing Configuration
TEST_DATABASE_URL="postgresql://test_user:test_pass@localhost:5432/test_deqode"
ENABLE_TEST_DATA=true

