# Environment Variables Template
# Copy this file to .env and fill in your actual values

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL="postgresql://postgres:password@localhost:5432/finance_chatbot"
REDIS_URL="redis://localhost:6379"

# ================================
# AUTHENTICATION
# ================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# ================================
# AI & LLM PROVIDERS
# ================================
# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4"

# Alternative: Anthropic Claude
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Alternative: Google Gemini
GOOGLE_API_KEY="your-google-api-key"

# ================================
# WEB SEARCH PROVIDERS
# ================================
# Tavily Search (Recommended)
TAVILY_API_KEY="tvly-your-tavily-api-key"

# Alternative: Serper
SERPER_API_KEY="your-serper-api-key"

# Alternative: Brave Search
BRAVE_API_KEY="your-brave-search-api-key"

# ================================
# VECTOR DATABASE (OPTIONAL)
# ================================
# Pinecone for long-term memory
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-west1-gcp-free"
PINECONE_INDEX="finance-chatbot-memory"

# Alternative: MongoDB Atlas Vector
MONGODB_ATLAS_URI="mongodb+srv://username:password@cluster.mongodb.net/"

# ================================
# APPLICATION CONFIGURATION
# ================================
# Server Ports
FRONTEND_PORT=3000
BACKEND_PORT=8000
AGENTS_PORT=8001

# Environment
NODE_ENV="development"
PYTHON_ENV="development"

# CORS Origins (for production)
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"

# ================================
# DEVELOPMENT ONLY
# ================================
# Enable detailed logging
DEBUG_MODE=true
LOG_LEVEL="debug"

# Show AI thinking process
SHOW_REASONING=true